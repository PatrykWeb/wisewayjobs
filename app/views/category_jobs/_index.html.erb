<div class = "sm:space-y-6">
<div class = "bg-gray-100 w-screen space-x-6 sm:pl-32 sm:space-y-6">
  <div class = "flex inline-flex grid grid-cols-3 pl-32 bg-gray-100 w-screen">
    <% CategoryJob.all.each do |job| %>
      <div class="w-full max-w-lg overflow-hidden rounded-lg shadow-lg sm:flex space-y-6">
        <div class="w-full sm:w-1/3">
          <img class="object-cover w-full h-48" src="https://images.pexels.com/photos/853199/pexels-photo-853199.jpeg?auto=compress&cs=tinysrgb&h=650&w=940" alt="Flower and sky"/>
        </div>
        <div class="flex-1 px-6 py-4">
          <h4 class="mb-3 text-xl font-semibold tracking-tight text-gray-800"><%= job.category_name %></h4>
          <p class="leading-normal text-gray-700"><%= job.category_description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>